<%= link_to "Back to Pictures", pictures_url %> | <%= link_to "Edit", edit_picture_path(@picture) %> | <%= link_to "Delete", @picture, :confirm => "Are you sure you want to delete this picture?", :method => :delete %>

<p><%= @picture[:title] %>, <%= @picture[:artist] %></p>

<%= image_tag @picture.url %>

<%= link_to "Upvote", like_picture_path(@picture), method: :put %> <%= @picture.up_score %>
<%= link_to "Downvote", dislike_picture_path(@picture), method: :put %> <%= @picture.down_score %>



<h2> Comments </h2>
	<%= render @picture.comments %>

<% if current_user %>
<h2> Add a comment </h2>
<%= render 'comments/form'%>
<% end %>