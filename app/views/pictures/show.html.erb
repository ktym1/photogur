<%= link_to "Back to Pictures", pictures_url %> 

<% if current_user %> | <%= link_to "Edit", edit_picture_path(@picture) %> | <%= link_to "Delete", @picture, :confirm => "Are you sure you want to delete this picture?", :method => :delete %>
<% end %>

<p><%= @picture[:title] %>, <%= @picture[:artist] %></p>

<%= image_tag @picture.image_url(:display) %>

<div class="voting">
   	<% if current_user %>
		<%= link_to "Upvote", like_picture_path(@picture), method: :put %> <%= @picture.up_score %>
	<% else %>
		Upvote: <%= @picture.up_score %>
	<% end %>
	
	<% if current_user %>
		<%= link_to "Downvote", dislike_picture_path(@picture), method: :put %> <%= @picture.down_score %>
	<% else %>
		Downvote: <%= @picture.down_score %>
	<% end %>
</div>
	 
<br> <h4> Comments </h4> </br>

	<%= render @picture.comments %>

<% if current_user %>
	<h5> Add a comment </h5>
	<%= render 'comments/form'%>
<% else %>

<% end %>

<%= render "user" %>
