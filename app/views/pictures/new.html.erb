<h1> Add a picture </h1>

<%= link_to "Back to Pictures", pictures_url %>

<p>
	<% if !@picture.errors.messages.blank? %>
		<p> Oops - some errors prevented this from saving: </p>
		<%= @picture.errors.messages each do |messages| %>
			<%= message %>
		<% end %>
	<% end %> 
</p>

<%= form_for @picture, :html=> {:multipart => true} do |f| %>
	<p> 
		<%= f.label :artist %> <br>
		<%= f.text_field :artist %>
	</p>
	<p>
		<%= f.label :title %> <br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.file_field :image %>

	</p>
	<p> 
		<%= f.label :remote_image_url, "or image URL" %> <br>
		<%= f.text_field :remote_image_url %>
	</p>
	
	<p>
		<%= f.submit "Save" %>
	</p>
<% end %>


