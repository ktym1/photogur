<h1> Add a picture </h1>

<%= link_to "Back to Pictures", pictures_url %>

<% if current_user %>
	<p>
		<% if !@picture.errors.messages.blank? %>
			<p> Oops - some errors prevented this from saving: </p>
			<% @picture.errors.full_messages.each do |message| %>
				<%= message %>
			<% end %>
		<% end %> 
	</p>

	<%= form_for @picture, :html=> {:multipart => true} do |f| %>
		<p> 
			<%= f.label :artist %> <br>
			<%= f.text_field :artist %>
		</p>
		<p>
			<%= f.label :title %> <br>
			<%= f.text_field :title %>
		</p>
		<p>
			<%= f.file_field :image %>

		<p>
			<%= f.submit "Save" %>
		</p>
	<% end %>

<% else %>
	<p> Please Log In to Add Picture </p>

<% end %>
