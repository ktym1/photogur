<%= link_to "Back to Pictures", pictures_url %> | <%= link_to "Edit", edit_picture_path(@picture) %> | <%= link_to "Delete", @picture, :confirm => "Are you sure you want to delete this picture?", :method => :delete %>

<p><%= @picture[:title] %>, <%= @picture[:artist] %></p>

<%= image_tag @picture.url %>

<h2> Comments </h2>
<% @picture.comments.each do |comment| %>
	<p>
		<strong> Commenter: </strong>
		<%= comment.commenter %>
	</p>

	<p>
		<strong> Comment: </strong>
		<%= comment.body %>
	</p>	
<% end %>

<h2> Add a comment </h2>
<%= form_for([@picture, @picture.comments.build]) do |f| %>
	<p>
		<%= f.label :commenter %> <br>
		<%= f.text_field :commenter %>
	</p>

	<p>
		<%= f.label :body %> <br>
		<%= f.text_area :body %> 
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>

